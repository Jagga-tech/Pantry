<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/quick_action_card_width"
    android:layout_height="@dimen/quick_action_card_height"
    android:layout_margin="@dimen/spacing_6"
    app:cardBackgroundColor="@color/background_white"
    app:cardCornerRadius="@dimen/corner_radius_16"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_12">

        <!-- Icon Circle Background -->
        <FrameLayout
            android:layout_width="@dimen/quick_action_icon_circle"
            android:layout_height="@dimen/quick_action_icon_circle"
            android:background="@drawable/background_circle_green"
            android:layout_marginBottom="@dimen/spacing_12">

            <ImageView
                android:id="@+id/action_icon"
                android:layout_width="@dimen/quick_action_icon_size"
                android:layout_height="@dimen/quick_action_icon_size"
                android:layout_gravity="center"
                android:contentDescription="Action Icon"
                android:src="@drawable/ic_add"
                android:tint="@color/primary_green" />
        </FrameLayout>

        <!-- Action Label -->
        <TextView
            android:id="@+id/action_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:text="@string/home_add_ingredient"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_14"
            android:textStyle="bold" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>