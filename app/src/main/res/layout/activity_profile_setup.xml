<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_24">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete Your Profile"
            android:textSize="@dimen/text_size_28"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="@dimen/spacing_8"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set up your nutrition goals to get personalized recommendations"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="@dimen/spacing_32"/>

        <!-- Profile Picture Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_24"
            app:cardCornerRadius="@dimen/corner_radius_12"
            app:cardElevation="@dimen/elevation_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile Picture (Optional)"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_16"/>

                <!-- Profile Image Container -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/spacing_12">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_profile"
                        android:scaleType="centerCrop"
                        android:background="@drawable/circle_background"/>
                </FrameLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/uploadPhotoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Upload Photo"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nutrition Goals Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_24"
            app:cardCornerRadius="@dimen/corner_radius_12"
            app:cardElevation="@dimen/elevation_2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_16">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Nutrition Goals"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_16"/>

                <!-- Calories -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/caloriesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_16"
                    android:hint="Daily Calorie Goal"
                    app:suffixText="kcal"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/caloriesInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="2000"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Protein -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/proteinLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_16"
                    android:hint="Daily Protein Goal"
                    app:suffixText="g"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/proteinInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="50"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Carbs -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/carbsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_16"
                    android:hint="Daily Carbs Goal"
                    app:suffixText="g"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/carbsInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="250"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Fat -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fatLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Daily Fat Goal"
                    app:suffixText="g"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/fatInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="70"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Continue to App"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            app:cornerRadius="@dimen/corner_radius_12"
            android:layout_marginBottom="@dimen/spacing_12"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/skipButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Skip for Now"
            android:textSize="@dimen/text_size_16"
            app:cornerRadius="@dimen/corner_radius_12"
            style="@style/Widget.Material3.Button.TextButton"/>

    </LinearLayout>
</ScrollView>
