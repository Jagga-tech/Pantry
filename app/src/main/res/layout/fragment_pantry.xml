<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Personalized Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_16"
                android:background="@color/background_white"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/pantry_greeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi User, you have 0 items in your pantry"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dietary_suggestion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_4"
                    android:text="Suggested items for your Vegetarian diet"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_12"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Quick Stats Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_16"
                android:orientation="horizontal">

                <!-- Total Items Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_8"
                    app:cardBackgroundColor="@color/primary_green_light"
                    app:cardCornerRadius="@dimen/corner_radius_12"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/total_items_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/primary_green"
                            android:textSize="@dimen/text_size_24"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="Total Items"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Expiring Soon Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_8"
                    app:cardBackgroundColor="@color/secondary_orange_light"
                    app:cardCornerRadius="@dimen/corner_radius_12"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/expiring_items_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/warning_orange"
                            android:textSize="@dimen/text_size_24"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="Expiring Soon"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_12" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Expiring Items Alert (Hidden by default) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/expiring_items_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_16"
                android:layout_marginBottom="@dimen/spacing_16"
                android:visibility="gone"
                app:cardBackgroundColor="@color/warning_light"
                app:cardCornerRadius="@dimen/corner_radius_12"
                app:cardElevation="2dp"
                app:strokeColor="@color/warning_orange"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_12">

                    <TextView
                        android:id="@+id/expiring_items_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User, these items are expiring soon:"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/expiring_items_list_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_4"
                        android:text="Milk, Eggs, Bread"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Pantry Items List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pantry_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_16"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Empty"
            android:src="@drawable/ic_pantry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_16"
            android:text="Your pantry is empty"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:text="Add ingredients to get started"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_14" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/empty_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_24"
            android:text="Add Item" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_16"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/primary_green" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>