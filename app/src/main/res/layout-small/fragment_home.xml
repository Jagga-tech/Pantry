<?xml version="1.0" encoding="utf-8"?>
<!-- Adaptive layout for small phones (<360dp) - Simplified version with all required views -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/bottom_spacing">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SECTION 1: HEADER WITH PROFILE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_16"
                android:background="@color/background_white"
                android:elevation="2dp">

                <FrameLayout
                    android:id="@+id/profile_container"
                    android:layout_width="@dimen/profile_picture_size"
                    android:layout_height="@dimen/profile_picture_size">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardBackgroundColor="@color/background_white"
                        app:cardCornerRadius="@dimen/corner_radius_28"
                        app:cardElevation="2dp"
                        app:strokeColor="@color/background_white"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:id="@+id/profile_picture"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Profile"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_profile" />
                    </com.google.android.material.card.MaterialCardView>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_12"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/greeting_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/home_greeting_morning"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_4"
                        android:text="User Name"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="bold" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/notification_container"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="@dimen/spacing_16">

                    <ImageView
                        android:id="@+id/notification_bell"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/home_notification"
                        android:src="@drawable/ic_notifications"
                        android:tint="@color/text_secondary" />

                    <View
                        android:id="@+id/notification_badge"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/background_circle_red"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>

            <!-- SECTION 2: HERO SEARCH BAR -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_bar_height"
                android:layout_marginHorizontal="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_16"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="@dimen/corner_radius_28"
                app:cardElevation="4dp"
                app:strokeColor="@color/divider_color"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/spacing_16">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Search"
                        android:src="@drawable/ic_search"
                        android:tint="@color/primary_green" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_12"
                        android:text="@string/home_search_hint"
                        android:textColor="@color/text_tertiary"
                        android:textSize="@dimen/text_size_16" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Microphone"
                        android:src="@drawable/ic_microphone"
                        android:tint="@color/text_tertiary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION 3: QUICK STATS CARDS - STACKED VERTICALLY FOR SMALL SCREENS -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_16"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Pantry Items Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/pantry_stats_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="@dimen/spacing_12"
                    app:cardBackgroundColor="@color/primary_green_light"
                    app:cardCornerRadius="@dimen/corner_radius_20"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="Pantry"
                            android:src="@drawable/ic_basket"
                            android:tint="@color/primary_green" />

                        <TextView
                            android:id="@+id/pantry_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:text="13"
                            android:textColor="@color/primary_green"
                            android:textSize="@dimen/text_size_32"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="@string/home_pantry_items"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_13" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Saved Recipes Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/recipes_stats_card"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cardBackgroundColor="@color/secondary_orange_light"
                    app:cardCornerRadius="@dimen/corner_radius_20"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="Recipes"
                            android:src="@drawable/ic_recipe_book"
                            android:tint="@color/secondary_orange" />

                        <TextView
                            android:id="@+id/recipes_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:text="12"
                            android:textColor="@color/secondary_orange"
                            android:textSize="@dimen/text_size_32"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="@string/home_saved_recipes"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_13" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- SECTION 4: QUICK ACTIONS MINIMAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_20"
                android:layout_marginHorizontal="@dimen/spacing_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_quick_actions"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_20"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- SECTION 5: EXPIRING ALERT CARD (minimal for small screens) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/expiring_alert_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_20"
                android:visibility="visible"
                app:cardBackgroundColor="@color/background_white"
                app:cardCornerRadius="@dimen/corner_radius_16"
                app:cardElevation="2dp"
                app:strokeColor="@color/warning_orange"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_16">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_12">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="Warning"
                            android:src="@drawable/ic_warning"
                            android:tint="@color/warning_orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_8"
                            android:text="@string/home_expiring_soon"
                            android:textColor="@color/warning_orange"
                            android:textSize="@dimen/text_size_16"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/expiring_items_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_12"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@string/home_expiring_items"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_14" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/expiring_find_recipes_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/small_button_height"
                        android:text="@string/home_find_recipes_btn"
                        android:textSize="@dimen/text_size_12"
                        app:backgroundTint="@color/secondary_orange_light"
                        app:cornerRadius="@dimen/corner_radius_18"
                        app:icon="@drawable/ic_search"
                        app:iconTint="@color/secondary_orange"
                        android:textColor="@color/secondary_orange" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SECTION 6: RECIPES HORIZONTAL SCROLL (stub for small screens) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_recipes_you_can_make"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Recipe Container for programmatic content -->
            <LinearLayout
                android:id="@+id/recipes_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_16"
                android:layout_marginTop="@dimen/spacing_12"
                android:orientation="vertical" />

            <!-- Empty State Section -->
            <LinearLayout
                android:id="@+id/empty_state_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/spacing_16"
                android:visibility="gone"
                android:layout_marginTop="@dimen/spacing_20">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="Empty State"
                    android:src="@drawable/ic_onboarding_1"
                    android:scaleType="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:text="@string/home_get_started"
                    android:textAlignment="center"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:text="@string/home_empty_desc"
                    android:textAlignment="center"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_14" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_first_ingredient_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="@dimen/spacing_16"
                    android:text="@string/home_add_first_ingredient"
                    app:cornerRadius="@dimen/corner_radius_12" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add_pantry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_16"
        android:text="@string/home_add_to_pantry"
        app:icon="@drawable/ic_add" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>