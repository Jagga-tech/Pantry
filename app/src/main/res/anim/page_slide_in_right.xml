<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Slide in from the right -->
    <translate
        android:fromXDelta="100%"
        android:toXDelta="0%"
        android:duration="300" />
    
    <!-- Fade in while sliding -->
    <alpha
        android:fromAlpha="0.7"
        android:toAlpha="1.0"
        android:duration="300" />
</set>